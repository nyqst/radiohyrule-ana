<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!--Global theme goes here-->
        <item name="android:windowBackground">@color/rh_almost_black</item>
        <item name="android:textViewStyle">@style/RH.TextView.Primary</item>
        <!--<item name="colorPrimary">@color/rh_primary</item>-->
        <!--<item name="colorPrimaryDark">@color/rh_primary_dk</item>-->
        <!--<item name="colorAccent">@color/rh_accent</item>-->
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/rh_blue_vdk</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@color/rh_white</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColorSecondary">?attr/colorAccent</item>
    </style>

</resources>