<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listen_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:textColor="@color/rh_white"
        tools:text="Song Title"/>

    <TextView
        android:id="@+id/listen_text_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/textAppearanceFootnote"
        tools:text="Artist Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listen_text_time_elapsed"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="2:59"/>

        <ProgressBar
            android:id="@+id/listen_progress_time"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar"/>

        <TextView
            android:id="@+id/listen_text_time_remaining"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="-3:38"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/listen_button_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/button_round_background"
        android:src="@drawable/ic_av_play_grey"/>

    <TextView
        android:id="@+id/listen_text_num_listeners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_social_people"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_social_people"
        android:textAppearance="@style/textAppearanceFootnote"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="43"/>

    <TextView
        android:id="@+id/listen_text_requested_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:textAppearance="@style/textAppearanceCaption"
        tools:text="Requested by lykchen"/>

</LinearLayout>